administration:
  groups:
    - name: pyenv
      state: present
      system: no
      append: no
    - name: wine
      state: present
      system: no
    - name: spark
      state: present
      system: no
      append: no
  users:
    - name: pyenv-user
      state: present
      groups: pyenv
    - name: wine-user
      state: present
      group: wine
    - name: spark-user
      state: present
      groups: spark
    - name: lars
      groups: pyenv,wine,postgres,spark,audio

list_of_commands:
  - name: ag
  - name: skype
    findby: cmd
  - name: spotify
  - name: awesome
  - name: vidyo
    cmd: VidyoDesktop
  - name: vimrc
    findby: custom
    shellcmd: >
                grep '^" vimrc from ansible$'
                     "{{ ansible_user_dir }}"
                     >/dev/null 2>&1
  - name: ohmyzsh
    findby: directory
    path: "{{ ansible_user_dir }}/.oh-my-zsh"
  - name: heidi
    findby: directory
    path:  "{{ wine.prefix_dir }}/heidi/drive_c/Program Files/HeidiSQL"

