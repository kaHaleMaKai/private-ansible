lvm:
  vgs:
    - vg: vgroot
      pvs: [/dev/sda1, /dev/sda2]
  volumes:
    - lv: lvansible
      vg: vgroot
      size: 500M
      mountpoint: /usr/local/pyenvs/ansible
      owner: pyenv-user
      group: pyenv
    - lv: lvboot
      vg: vgroot
      size: 300M
      mountpoint: /boot
