# settings for old os
lvm_group_vars:
  vgs:
    - vg: vgroot
      pvs:
      - /dev/sda1
      - /dev/sda2
  volumes:
    - lv: lvroot
      vg: vgroot
      size: 30G
      mountpoint: /
    - lv: lvtmp
      vg: vgroot
      size: 5G
      mountpoint: /tmp
      owner: root
      group: root
      mode: '1777'
    - lv: lvhome
      vg: vgroot
      size: 30G
      mountpoint: /home
      root_reserve: 0
    - lv: lvboot
      vg: vgroot
      size: 300M
      mountpoint: /boot
    - lv: lvoblivion
      vg: vgroot
      size: 5G
      mountpoint: /media/oblivion
      options: noatime
      root_reserve: 0

