      vg: vgroot
      size: 1G
      mountpoint: /usr/local/pyenvs/datascience
      owner: pyenv-user
      group: pyenv
    - lv: lvhome
      vg: vgroot
      size: 30G
      mountpoint: /home
    - lv: lvpybricks
      vg: vgroot
      size: 1G
      mountpoint: /usr/local/pyenvs/bricks
      owner: pyenv-user
      group: pyenv
    - lv: lvroot
      vg: vgroot
      size: 30G
      mountpoint: /
    - lv: lvwine
      vg: vgroot
      size: 20G
      mountpoint: /usr/local/wine
      owner: wine-user
      group: wine
    - lv: lvhdp
      vg: vgroot
      size: 60G
      mountpoint: /opt/hdp/sandbox
      owner: lars
      group: lars

