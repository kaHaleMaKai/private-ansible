lvm_group_vars:
  vgs:
    - vg: vgmain
      pvs: ...
  volumes:
    - lv: lvroot
      vg: vgmain
      size: 10G
      mountpoint: /
    - lv: lvtmp
      vg: vgmain
      size: 1G
      mountpoint: /tmp
      owner: root
      group: root
      mode: '1777'
    - lv: home
      vg: vgmain
      size: 5G
      mountpoint: /home
    - lv: /var
      vg: vgmain
      size: 1G
      mountpoint: /var

